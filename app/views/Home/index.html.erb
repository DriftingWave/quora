<!-- home index -->
<div id="sign_up_button">
<%= link_to "Sign Up User", controller: "users", :action => "new"%>
</div>
<div class="splash">

<h2 class="login_title">Welcome to DBC CORE - AA</h2>

<div class="login">
<%= form_for :user, url: user_sessions_path do |f| %>
  <%= f.label :email%>
  <%= f.text_field :email, :placeholder => "Your email here"%><br>
  <%= f.label :password %>
  <%= f.password_field :password, :placeholder => "Your password here"%>
  <%= f.submit :LOGIN %>
  <%end%>
  <h3><%= flash[:error] %></h3>
</div>
<% if @failed_login %>
<p style="color:red; font-weight:bold;"><%= "You've Failed." %></p>
<% end %>
</div>